<Window x:Class="KikeletPanzio_PocsaiG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KikeletPanzio_PocsaiG"
        mc:Ignorable="d"
        Title="Recepció Bejelentkezés" Height="450" Width="800">
        
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Recepciós felület:" Margin="10" FontSize="30"/>
            <Label Content="Felhasználó:" Margin="20,10,0,0"/>
            <TextBox Name="txtBoxAdminF" Width="200" Height="25"/>
            <Label Content="Jelszó:" Margin="20,10,0,0"/>
            <TextBox Name="txtBoxAdminJ" Width="200" Margin="0,5,0,0" Height="25"/>
            <Button Name="btnBejelentkezes" Height="30" Width="240" Margin="0,20,0,0" Content="Bejelentkezés" FontSize="19" Click="btnBejelentkezes_Click"/>
        </StackPanel>
    </Grid>
</Window>
